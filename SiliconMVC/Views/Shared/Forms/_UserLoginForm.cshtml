@model SignInViewModel

<form method="post" id="login-form" asp-controller="User" asp-action="SignIn" novalidate>
    <fieldset>
        <legend><h1>Welcome back</h1></legend>
        <p class="text-m">Don’t have an account yet? <a asp-controller="User" asp-action="SignUp">Sign up here.</a></p>
        
        <div id="signin-email" class="input-box">
            <label asp-for=SignIn.Email></label>
            <span asp-validation-for=SignIn.Email></span>
            <input asp-for="SignIn.Email" />
        </div>

        <div id="signin-password" class="input-box">
            <label asp-for=SignIn.Password></label>
            <span asp-validation-for="SignIn.Password"></span>
            <input asp-for="SignIn.Password" />
        </div>

        <div id="signin-remember" class="checkbox-box">
            <input asp-for=SignIn.Remember>
            <label class="text-m" asp-for=SignIn.Remember></label>
        </div>

        <button type="submit" class="btn-theme">Sign in</button>
    </fieldset>
</form>