@using SiliconMVC.Models
@model UserBasicInfoModel

<form method="post" id="basic-info" asp-controller="User" asp-action="BasicInfo" novalidate>
    <fieldset>
        <legend><h5>Basic info</h2></legend>
        <div class="box">
            <div id="details-firstname" class="input-box">
                <label asp-for=FirstName></label>
                <input asp-for="FirstName" />
            </div>

            <div id="details-lastname" class="input-box">
                <label asp-for=LastName></label>
                <input asp-for="LastName" />
            </div>

            <div id="details-email" class="input-box">
                <label asp-for=Email></label>
                <span asp-validation-for="Email"></span>
                <input asp-for="Email" />
            </div>

            <div id="details-phone" class="input-box">
                <label asp-for=Phone></label>
                <input asp-for="Phone" />
            </div>
        </div>

        <div id="details-bio" class="input-box">
            <label asp-for=Bio>Bio <span>(optional)</span></label>
            <textarea asp-for="Bio" rows="4"></textarea>
        </div>

        <div class="buttons-box">
            <button class="btn btn-gray" asp-controller="User" asp-action="Details">Cancel</button>
            <button type="submit" class="btn-theme">Save changes</button>
        </div>
    </fieldset>
</form>